<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="tesla" class="org.iushu.expression.beans.Man">
        <property name="name" value="Tesla"/>
        <property name="age" value="#{T(org.apache.commons.lang3.RandomUtils).nextInt(1, 100)}"/>
        <property name="height" value="#{systemProperties['tesla.height']}"/>
    </bean>

    <bean id="eva" class="org.iushu.expression.beans.Woman">
        <property name="name" value="Eva"/>
        <property name="age" value="#{tesla.age}"/>  <!-- ref bean's value in expression -->
    </bean>

    <bean id="village" class="org.iushu.expression.beans.Village">
        <property name="id" value="7003"/>
        <property name="name" value="Mountain"/>
    </bean>

    <bean id="factoryBean" class="org.springframework.beans.factory.config.MapFactoryBean">
        <property name="sourceMap">
            <map>
                <entry key="village" value-ref="village"/>
            </map>
        </property>
    </bean>

</beans>